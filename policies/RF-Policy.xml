<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RF-Policy">
    <DisplayName>RF-Policy</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="application/json">
                {
                "Error_code" : 429,
                "Error_Message":"Your application getting huge traffic from outside party so please control or increase requests to cater the needs"
                }
                </Payload>
            <StatusCode>429</StatusCode>
            <ReasonPhrase>Too many requests</ReasonPhrase>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>